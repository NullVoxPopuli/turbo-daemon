{
  "name": "turbo-daemon",
  "version": "1.1.1",
  "repository": {
    "type": "git",
    "url": "git@github.com:NullVoxPopuli/turbo-daemon.git"
  },
  "type": "module",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "default": "./src/index.js"
    }
  },
  "bin": {
    "turbo-daemon": "./src/bin.js"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "lint": "concurrently 'npm:lint:*(!fix)' --names 'lint:'",
    "lint:fix": "concurrently 'npm:lint:*:fix' --names 'fix:'",
    "lint:js:fix": "eslint . --fix",
    "lint:js": "eslint .",
    "lint:prettier:fix": "prettier . --write",
    "lint:package": "publint",
    "lint:published-types": "attw --pack . --ignore-rules no-resolution cjs-resolves-to-esm",
    "lint:prettier": "prettier . --check",
    "lint:types": "tsc --noEmit",
    "cli": "node ./src/bin.js",
    "logs": "pnpm cli logs"
  },
  "dependencies": {
    "close-with-grace": "^1.3.0",
    "get-port": "^7.1.0",
    "pino": "^9.2.0",
    "salvatore": "^0.1.2",
    "turborepo-remote-cache": "^2.3.4"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@nullvoxpopuli/eslint-configs": "^5.5.0",
    "@tsconfig/node22": "^22.0.5",
    "@tsconfig/strictest": "^2.0.8",
    "@types/node": "25.0.10",
    "concurrently": "^9.2.1",
    "eslint": "9.39.2",
    "execa": "^9.6.1",
    "prettier": "3.8.1",
    "publint": "^0.3.17",
    "release-plan": "^0.9.0",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": "^20.11.0 || >= 22.16.0"
  }
}
